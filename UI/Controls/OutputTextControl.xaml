<UserControl x:Class="PSForge.UI.Controls.OutputTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================
         OutputTextControl
         Raw string output viewer for Format-List style text and JSON output.
         Uses a monospace font for alignment and readability.
         
         DataContext: OutputViewModel (binds to TextOutput property)
         ================================================================ -->

    <TextBox Text="{Binding TextOutput, Mode=OneWay}"
             IsReadOnly="True"
             TextWrapping="Wrap"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Auto"
             FontFamily="Cascadia Code, Consolas, Courier New"
             FontSize="12"
             Padding="8"
             Background="{StaticResource SurfaceBrush}"
             BorderBrush="{StaticResource BorderBrush}"
             BorderThickness="1"/>
</UserControl>
