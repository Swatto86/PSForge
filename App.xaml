<Application x:Class="PSForge.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup"
             Exit="Application_Exit">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Converters MUST load first so DataTemplates and Styles can reference them -->
                <ResourceDictionary Source="UI/Styles/Converters.xaml"/>
                <!-- Application-wide styles (colors, brushes, control styles) -->
                <ResourceDictionary Source="UI/Styles/Styles.xaml"/>
                <!-- Parameter-type-specific DataTemplates -->
                <ResourceDictionary Source="UI/Styles/DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
